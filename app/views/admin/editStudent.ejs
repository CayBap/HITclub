<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Sửa thông tin sinh viên</title>

    <!-- Bootstrap Core CSS -->

    <link href="/static/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="/static/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/static/dist/css/sb-admin-2.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="/static/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>
    <div id="wrapper">
        <%- include ../layout/nav.ejs %>
            <div id="page-wrapper" style="min-height: 355px;">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Sửa thông tin sinh viên</h1>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">

                        <form action="" method="POST">
                            <%if(data && data.error){%>
                                <div id="login-alert" class="alert alert-danger col-sm-12">
                                    <%=data.error%>
                                </div>
                                <%}%>
                                    <input type="hidden" value="<%= data._id%>" class="id" name="id">
                                    <div class="form-group has-success">
                                        <label class="control-label " for="inputSuccess">Họ tên:</label>
                                        <input type="text" name="name" value="<%= data.name%>" class="form-control name" id="inputSuccess">
                                    </div>
                                    <div class="form-group has-success">
                                        <label class="control-label" for="inputSuccess">Lớp-khóa:</label>
                                        <input type="text" name="class" value="<%= data.class%>" class="form-control class" id="inputSuccess">
                                    </div>
                                    <div class="form-group has-success">
                                        <label class="control-label" for="inputSuccess">Mã sinh viên:</label>
                                        <input type="number" name="idStudent" value="<%= data.idStudent%>" class="form-control idStudent" id="inputSuccess">
                                    </div>
                                    <div class="form-group has-success">
                                        <label class="control-label" for="inputSuccess">Số điện thoại:</label>
                                        <input type="number" name="phoneNumber" value="<%= data.phoneNumber%>" class="form-control phoneNumber" id="inputSuccess">
                                    </div>
                                    <div class="form-group has-success">
                                        <label class="control-label" for="inputSuccess">Ngày tháng năm sinh:</label>
                                        <input type="date" name="birthday" value="<%= data.birthday%>" class="form-control birthday" id="inputSuccess">
                                    </div>
                                    <div class="form-group has-success">
                                        <label class="control-label" for="inputSuccess">Quê quán:</label>
                                        <input type="text" name="where"  value="<%= data.where%>" class="form-control where" id="inputSuccess">
                                    </div>
                                    <div class="form-group has-success">
                                        <label class="control-label" for="inputSuccess">Mật khẩu:</label>
                                        <input type="text" name="password" value="<%= data.password%>" class="form-control password" id="inputSuccess">
                                    </div>
                                    <div class="form-group has-success">
                                        <label class="control-label" for="inputSuccess">Thời gian tạo:</label>
                                        <input type="text" name="createdAt" value="<%= data.createdAt%>" class="form-control createdAt" id="inputSuccess">
                                    </div>
                                    <div class="form-group has-success">
                                        <label class="control-label" for="inputSuccess">Thời gian sửa:</label>
                                        <input type="text" name="updatedAt" value="<%= data.updatedAt%>" class="form-control updatedAt" id="inputSuccess">
                                    </div>
                                  
                                    <button type="button" class="btn btn-success student_edit">Lưu thông tin</button>
                                    <a href="/admin/student/1" class="btn btn-default">Hủy bỏ</a>
                        </form>
                    </div>
                </div>
                <!-- /.row -->
            </div>

            <!-- jQuery -->
            <script src="/static/vendor/jquery/jquery.min.js"></script>

            <!-- Bootstrap Core JavaScript -->
            <script src="/static/vendor/bootstrap/js/bootstrap.min.js"></script>

            <!-- Metis Menu Plugin JavaScript -->
            <script src="/static/vendor/metisMenu/metisMenu.min.js"></script>

            <!-- Custom Theme JavaScript -->
            <script src="/static/dist/js/sb-admin-2.js"></script>
            <script src="/static/js/student.js"></script>

</body>

</html>